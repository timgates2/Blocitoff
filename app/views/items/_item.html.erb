<div class="media" id="item-<%= item.id %>">
    <div class="media-body">
      <p><%= item.description %></p>
      <p><%= item.time_left %> Days </p> 
        <small>
        submitted <%= time_ago_in_words(item.created_at)%> ago.<br>
        <% if user_is_authorized_for_item?(item) %>
         | <%= link_to "Delete", [@user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-trash' %>
       <% end %>
        </small>

    </div>
</div>